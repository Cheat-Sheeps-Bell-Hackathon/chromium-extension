      "target": "es6",
      "module": "commonjs",
      "rootDir": "src",
      "typeRoots": ["node_modules/@types"],
      "outDir": "dist",
      "sourceMap": true,
      "resolveJsonModule": true,
      "lib": ["es6", "dom"],
      "esModuleInterop": true
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }